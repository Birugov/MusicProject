<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_width"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="@dimen/activity_vertical_margin"
        android:elevation="16dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/song_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/song_iv"
                android:layout_alignTop="@id/song_iv"
                android:fontFamily="sans-serif-black"
                 />

            <TextView
                android:id="@+id/artist_name_tv"
                android:fontFamily="sans-serif"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/song_iv"
                android:layout_alignBottom="@id/song_iv"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="апвапвапвап" />

            <ImageView

                android:id="@+id/song_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:src="@mipmap/ic_launcher_round"
                android:layout_marginTop="@dimen/tv_iv_margin"
                android:layout_marginBottom="@dimen/tv_iv_margin"

                >

            </ImageView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>